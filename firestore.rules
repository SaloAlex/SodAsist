rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Funciones auxiliares
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated()
             && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'admin';
    }

    function isSodero() {
      return isAuthenticated()
             && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol == 'sodero';
    }

    function isAdminOrSodero() {
      return isAuthenticated()
             && exists(/databases/$(database)/documents/users/$(request.auth.uid))
             && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol in ['admin', 'sodero']);
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.rol;
    }

    // Reglas específicas para usuarios
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated()
                   && request.auth.uid == userId
                   && request.resource.data.rol in ['admin', 'sodero'];
      allow update: if isAuthenticated()
                   && (request.auth.uid == userId || isAdmin());
    }

    // Reglas para clientes
    match /clientes/{clienteId} {
      allow read, write: if isAdminOrSodero();
    }

    // Reglas para entregas
    match /entregas/{entregaId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Reglas para visitas
    match /visitas/{visitaId} {
      allow read, write: if isAdminOrSodero();
    }

    // Reglas para rutas
    match /rutas/{rutaId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Pagos - authenticated users can read and write
    match /pagos/{pagoId} {
      allow read, write: if isAuthenticated();
    }
    
    // KPIs - authenticated users can read, only functions can write
    match /kpis/{kpiId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // ───────── INVENTARIO LEGACY ─────────
    match /inventarioVehiculo/{invId} {
      allow read, write: if isAdminOrSodero();
    }

    // Regla para inventarioVehiculo en cualquier subruta (por si acaso)
    match /{path=**}/inventarioVehiculo/{invId} {
      allow read, write: if isAdminOrSodero();
    }

    // ───────── NUEVO SISTEMA DE INVENTARIO DINÁMICO ─────────
    
    // Productos - lectura y escritura para admin y sodero
    match /productos/{productoId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Categorías de productos - lectura y escritura para admin y sodero
    match /categoriasProductos/{categoriaId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Movimientos de inventario - lectura y escritura para admin y sodero
    match /movimientosInventario/{movimientoId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Ajustes de inventario - lectura y escritura para admin y sodero
    match /ajustesInventario/{ajusteId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Proveedores - lectura y escritura para admin y sodero
    match /proveedores/{proveedorId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Historial de precios - lectura y escritura para admin y sodero
    match /historialPrecios/{historialId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Inventario vehicular dinámico - lectura y escritura para admin y sodero
    match /inventarioVehicular/{inventarioId} {
      allow read, write: if isAdminOrSodero();
    }
    
    // Configuración del inventario - lectura para todos, escritura solo admin
    match /configuracionInventario/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}